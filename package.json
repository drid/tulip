{
  "name": "tulip",
  "productName": "Tulip",
  "version": "1.10.4",
  "description": "Rally Roadbook Creator",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build-linux": "electron-builder --linux --publish never && npm run sentry:sourcemaps",
    "build-win": "electron-builder --windows",
    "build-mac": "electron-builder --mac",
    "test": "tape test/unit/*-tests.js",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org drid --project tulip ./dist && sentry-cli sourcemaps upload --org drid --project tulip ./dist",
    "convert-svg": "node utils/convert_svgs.js",
    "changelog": "git cliff --unreleased --tag \"v$npm_package_version\" --prepend CHANGELOG.md",
    "release": "scripts/version.sh"
  },
  "keywords": [
    "Electron",
    "roadbook",
    "rally",
    "tulip"
  ],
  "author": "Drew Mitchell <jamesandrewmitchell@gmail.com>",
  "contributors": [
    "Luke Bennett",
    "Dave Peckham",
    "Ilias Daradimos <judgedrid@gmail.com>"
  ],
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/drid/tulip.git"
  },
  "bugs": {
    "url": "https://gitlab.com/drid/tulip/-/issues"
  },
  "homepage": "https://drid.gitlab.io/tulip",
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "jsdom": "^26.1.0",
    "source-map-support": "^0.5.21",
    "tape": "^4.17.0",
    "xml2js": "^0.6.2"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@sentry/cli": "^2.42.2",
    "@sentry/electron": "^6.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "foundation-icons": "^2.0.0",
    "foundation-sites": "^5.5.3",
    "jquery": "^2.1.4",
    "knockout": "^3.4.0",
    "quill": "^2.0.3"
  },
  "snap": {
    "productName": "tulip-roadbook",
    "grade": "devel"
  },
  "build": {
    "appId": "tulip.app",
    "fileAssociations": [
      {
        "ext": "tlp",
        "name": "Roadbook",
        "description": "Tulip roadbook file",
        "mimeType": "application/x-tlp",
        "role": "Editor"
      }
    ],
    "win": {
      "icon": "tulip-logo.ico",
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "Editors",
      "icon": "tulip-logo.icns",
      "target": [
        {
          "target": "zip"
        }
      ]
    },
    "linux": {
      "category": "Editors",
      "icon": "tulip-logo.icns",
      "executableName": "tulip-roadbook",
      "mimeTypes": [
        "application/x-tlp"
      ],
      "extraResources": [
        {
          "from": "build-resources/application-x-tlp.xml",
          "to": "usr/share/mime/packages/application-x-tlp.xml"
        },
        {
          "from": "src/svg/TulipLogo.svg",
          "to": "usr/share/icons/hicolor/scalable/mimetypes/application-x-tlp.svg"
        }
      ],
      "target": [
        {
          "target": "snap"
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ]
    },
    "deb": {
      "afterInstall": "scripts/after-install.sh"
    },
    "rpm": {
      "afterInstall": "scripts/after-install.sh"
    }
  }
}